<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThoughtDef>
    <defName>ApparelDamagedPrude</defName>
    <workerClass>ThoughtWorker_ApparelDamaged</workerClass>
    <requiredTraits>
      <li>Prude</li>
    </requiredTraits>
    <stages>
      <li>
        <label>wearing worn-out apparel</label>
        <description>My outfit is looking pretty bad. It's getting revealing...</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
      <li>
        <label>wearing tattered apparel</label>
        <description>I'm wearing a tattered piece of trash. Everyone can see right through it!</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Individuality</defName>
    <workerClass>Psychology.ThoughtWorker_Individuality</workerClass>
    <stages>
      <li>
        <label>matching apparel</label>
        <description>Someone else in the colony is dressed in a matching outfit to me, head to toe. It's kind of unsettling.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
      <li>
        <label>matching apparel</label>
        <description>Other people in the colony are wearing identical outfits to me, head to toe. It's offputting.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
      <li>
        <label>stifled individuality</label>
        <description>Most of the colony looks exactly the same, head to toe. It's creepy, and I want to express my individuality.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
      <li>
        <label>stifled individuality</label>
        <description>Everyone here looks exactly the same, head to toe! It's deeply unsettling, and I want to express my individuality.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
